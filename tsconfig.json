{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",  // Mantenemos ES2022 para que se compile a la versión más moderna de JS
    "module": "es2020",  // Cambié "preserve" a "es2020" para asegurarse de que se resuelvan los módulos correctamente
    "moduleResolution": "node",  // Asegura que las importaciones de módulos se resuelvan de manera adecuada
    "esModuleInterop": true,  // Permite interoperabilidad con módulos CommonJS y ES6
    "skipDefaultLibCheck": true,
    "outDir": "./out-tsc"  // Directorio de salida para los archivos compilados
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
